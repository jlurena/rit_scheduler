<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/header_container"
            android:background="@drawable/course_view_header_background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            app:layout_constraintEnd_toEndOf="parent">

            <com.rey.material.widget.TextView
                android:id="@+id/course_code_and_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="@string/csci_261"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Analysis of Algorithms"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/course_code_and_section" />

            <com.rey.material.widget.TextView
                android:id="@+id/term_course_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="3dp"
                android:text="@string/fall_2018"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>


        <GridLayout
            android:id="@+id/course_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_container"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/header_container">

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:src="@drawable/calendar_blank"
                android:tint="@color/medium_gray"
                android:contentDescription="@string/professor" />

            <com.rey.material.widget.TextView
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_row="0"
                android:text="Mo We Fri"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <com.rey.material.widget.TextView
                android:layout_column="2"
                android:layout_marginStart="20dp"
                android:layout_row="0"
                android:text="12:00PM - 12:50PM"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />


            <Space
                android:layout_column="0"
                android:layout_row="1" />

            <ImageView
                android:id="@+id/professor_icon"
                android:src="@drawable/teach"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:tint="@color/medium_gray"
                android:contentDescription="@string/professor" />

            <com.rey.material.widget.TextView
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_row="2"
                android:text="@string/professor_x"
                android:textSize="12sp" />
        </GridLayout>

        <!--TODO
        final FloatingActionButton fab_line = (FloatingActionButton)v.findViewById(R.id.fab_line);
        fab_line.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                fab_line.setLineMorphingState((fab_line.getLineMorphingState() + 1) % 2, true);
            }
        });-->
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/add_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:fab_backgroundColor="@color/color_accent"
            app:fab_radius="16dp"
            app:fab_iconSrc="@drawable/ic_plus_white_48dp"
            app:v_styleId="@array/fab_line"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>